{
  "extends": "base-ts-config",
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "ts-node": {
    "compilerOptions": {
     "types": ["node"],
     "module": "CommonJS",
    },
  },
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/scripts",
    "**/dist",
    "**/test",
    "**/es",
    "**/lib"
  ]
}